							if (itemNode.HasChildNodes)
							{
								string guid = "";
								string pubDate = "";
								string postTitle = "";
								string postAbstract = "";
								string postContent = "";
								string postThumbnail = "";
								string postLink = "";
								List<string> images = new List<string>();

								foreach (System.Xml.XmlNode xmlnode in itemNode)
								{
									if (xmlnode.Name == "title")
									{
										postTitle = xmlnode.InnerText;
									}

									if (xmlnode.Name == "link")
									{
										postLink = xmlnode.InnerText;
									}

									if (xmlnode.Name == "pubDate")
									{
										pubDate = xmlnode.InnerText;
									}

									if (xmlnode.Name == "guid")
									{
										guid = System.Text.RegularExpressions.Regex.Replace(xmlnode.InnerText, "https://today.ucf.edu/\\?p=", string.Empty);
									}

									if (xmlnode.Name == "description")
									{
										postAbstract = HttpUtility.HtmlDecode(xmlnode.InnerText);
									}

									if (xmlnode.Name == "content:encoded")
									{
										postContent = HttpUtility.HtmlDecode(xmlnode.InnerText);
									}

									if (xmlnode.Name == "enclosure")
									{
										postThumbnail = xmlnode.Attributes["url"].Value;
									}

									if (xmlnode.Name == "media:group")
									{
										images.Add(xmlnode.ChildNodes.Item(0).Attributes["url"].Value);
									}
								}
								
								<li>
									<div title="@ucfTodayBlogTitle">
										<a href="#@guid" class="target_blank">
