														<hr />
														<p><em>@Convert.ToDateTime(pubDate).ToLongDateString(), at @Convert.ToDateTime(pubDate).ToShortTimeString()</em></p>
													</div>
													<div class="col-sm-6">
														<br />
														<p class="lead">@postAbstract</p>
														<p class="text-center"><a href="@postLink" target="_blank" class="btn btn-primary btn-sm">Read Full Article</a></p>
														<p>&nbsp;</p>
													</div>
												</div><!--/.row-->
												<div class="row">
													<img alt="ucf" data-echo="@images.FirstOrDefault()" width="100" style="width: 100%;">
												</div>
												<!--@postContent-->
